@model TechTest_KawanLama.Models.ToDo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ToDo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="activities_no" />
            <div class ="form-group">
                <label asp-for="activities_no" class="control-label"></label>
                <input asp-for="activities_no" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" readonly="@(Model.Status != "Unmarked")" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" readonly="@(Model.Status != "Unmarked")" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Status"  type="radio" value="Done" />Done<br />
                <input asp-for="Status" type="radio" value="Canceled" />Canceled<br />
                <input asp-for="Status" type="radio" value="Unmarked" />Unmarked<br />
            </div>
            <div class="form-group">
                <input type="submit" name="activities_no" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
